{
  "manifest_version": 3,
  "name": "Website Saver Extension",
  "version": "1.0",
  "description": "A browser extension to save website URLs with titles, descriptions, and groups to backend API",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "180": "icon180.png",
    "192": "icon192.png",
    "512": "icon512.png"
  }
}